<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.runtime.remoting>
    <application name="Server">
      <service>
        <wellknown
          mode="Singleton" type="Remote.UserList, Remote"
          objectUri="User" />
        <wellknown
          mode="Singleton" type="Remote.Operation, Remote"
          objectUri="Operation" />
      </service>
      <channels>
        <channel ref="tcp" port="9000">
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full" />
          </serverProviders>
        </channel>
      </channels>
    </application>
  </system.runtime.remoting>
</configuration>